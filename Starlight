local Starlight = loadstring(game:HttpGet("https://raw.githubusercontent.com/Nebula-Softworks/Starlight-Interface-Suite/refs/heads/master/Source.lua"))()  

local NebulaIcons = loadstring(game:HttpGet("https://raw.githubusercontent.com/Nebula-Softworks/Nebula-Icon-Library/master/Loader.luau"))() --loads modules that allow 100% support for Lucide and Material Icons

local Window = Starlight:CreateWindow({
    Name = "ERROR HUB",
    Subtitle = "Welcome",
    Icon = 111319436245213, -- Replace with your icon ID

    LoadingSettings = {
        Title = "Loading",
        Subtitle = "Thanks for using my hub",
    },

    FileSettings = {
        ConfigFolder = "ERROR HUB starlight"
    },
    
    NotifyOnCallbackError = true,
})

------------------------------------------------------------------------------------------------------------------------------

local PrincipalS = Window:CreateTabSection("Main")

------------------------------------------------------------------------------------------------------------------------------

local MainTab = PrincipalS:CreateTab({
    Name = "Main",
    Icon = NebulaIcons:GetIcon('house', 'Lucide'),
    Columns = 2,
}, "Seção principal")
local CharTab = PrincipalS:CreateTab({
    Name = "Characters",
