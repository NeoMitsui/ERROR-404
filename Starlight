    Column = 2,
}, "Player Script")

local Button = Util:CreateButton({
    Name = "Infinite Yield",
    Icon = NebulaIcons:GetIcon('refresh-cw', 'Lucide'),
    Tooltip = "Reseta seu personagem tanto para reviver quanto para trocar de personagem!",
    Style = 1,
    Callback = function()
        loadstring(game:HttpGet('https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source'))()
    end,
}, "Infinite yield")

------------------------------------------------------------------------------------------------------------------------------

local CharSmall = CharTab:CreateGroupbox({
    Name = "Characters",
    Icon = NebulaIcons:GetIcon('user-round-minus', 'Lucide'),
    Column = 1,
}, "small characters")

local CharLarge = CharTab:CreateGroupbox({
    Name = "Larges",
    Icon = NebulaIcons:GetIcon('user-round-plus', 'Lucide'),
    Column = 2,
}, "large characters")

local CharMutant = CharTab:CreateGroupbox({
    Name = "Striders etc",
    Icon = NebulaIcons:GetIcon('dna', 'Lucide'),
    Column = 3,
}, "striders, helicopters and mutants")


local Button = CharMutant:CreateButton({
    Name = "Reset",
    Icon = NebulaIcons:GetIcon('refresh-cw', 'Lucide'),
    Tooltip = "Resets your character!",
    Style = 1,
    IndicatorStyle = 1,
    Callback = function()
        local Player = game:GetService("Players").LocalPlayer
        local humanoid = Player.Character and Player.Character:FindFirstChildWhichIsA("Humanoid")
        if replicatesignal then
            replicatesignal(Player.Kill)
        elseif humanoid then
            humanoid:ChangeState(Enum.HumanoidStateType.Dead)
        else
            Player.Character:BreakJoints()
        end
    end,
}, "Resetar")

local InfoReset = CharMutant:CreateParagraph({
    Name = "important",
    Content = [[Uses of reset:
    -REVIVE YOURSELF WHEN DOWNED
    -REPLACE CHARACTERS MID-MATCH
    ]]

}, "Informacões do reset")

local Toggle = CharMutant:CreateToggle({
    Name = "Auto Cinema",
    CurrentValue = false,
    Style = 1,
    CheckboxIcon = NebulaIcons:GetIcon('check', 'Lucide'),
    Callback = function(Value)
        local ReplicatedStorage = game:GetService("ReplicatedStorage")
        local ChangeToCinema = ReplicatedStorage.ChangeToCinema
        while value do
            task.wait(2)
        ChangeToCinema:FireServer()
        end
    end,
}, "Absolute cinema")

